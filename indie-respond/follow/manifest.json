{
	"name": "Indie Follow",
	"version": "0.1.1",
	"description": "Follow the current page on snarfed.org",
    "manifest_version": 2,
    "minimum_chrome_version": "74",
    "browser_specific_settings": {
        "gecko": {
            "id": "indie-follow@snarfed.org",
            "strict_min_version": "67.0"
        }
    },
    "browser_action": {
        "default_icon": {
          "48": "icon.png"
        },
        "default_title": "like on snarfed.org"
    },
    "permissions": [
        "<all_urls>",
        "alarms",
        "webRequest",
        "webRequestBlocking"
    ],
    "background": {
        // use page instead of scripts so that the .js files can import (and use
        // async/await?)
        "page": "background.html",
        "persistent": false
    }
}
