{
  "title": "Firefox",
  "rules": [
    {
      "description": "Control-L to focus address bar (via Cmd-F6)",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "l",
          "modifiers": {"mandatory": ["control"]}
        },
        "to": [{
          "key_code": "f6",
          "modifiers": ["command"]
        }],
        "conditions": [{
          "type": "frontmost_application_if",
          "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
        }]
      }]
    },
    {
      "description": "Control-# and backspace to Command-* (for choosing tabs",
      "manipulators": [{
